<% if @book.errors.any? %>
    <div class="alert alert-primary" role="alert" >
      <p>
        <%= pluralize(@book.errors.count, "error") %>
      </p>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>