<h1>List of books</h1>

<table>
	<%if @books.present? %>
		<tr>
			<th>Book Name</th>
			<th>Description</th>
			<th colspan="3"></th>
		</tr>
			<%@books.each do |book|%>
				<tr>
					<td>
						<%= book.title%>
					</td>
					<td>
						<%= book.description %>
					</td>
					<td>
						<%= link_to "edit", edit_author_book_path(id:book.id) %>&nbsp
					</td>
					<td>
						<%= link_to "show", author_book_path(id:book.id) %>&nbsp
					</td>
					<td>
						<%= link_to 'Destroy', author_book_path(id:book.id), method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>
				</tr>
			<%end%>
	<%else%>
		<p> No books found. </p>
	<%end%>

</table>
<p><%= link_to 'back', authors_path%>&nbsp&nbsp<%= link_to 'add_book', new_author_book_path%></p>