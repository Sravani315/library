<h2 style="margin-top: 30px;margin-bottom: 20px">List of books</h2>
<!-- <div  class="card" style="width: 60rem;">-->
<table class="table table-hover table-bordered table-striped " >
	<%if @books.present? %>
		 <thead class="thead-dark">	
			<tr>
				<th scope="col" >Book Name</th>
				<th scope="col" >Description</th>
				<th scope="col" >Actions</th>
			</tr>
		</thead>
		<tbody>
			<%@books.each do |book|%>
				<tr>
					<td>
						<%= book.title%>
					</td>
					<td>
						<%= book.description %>
					</td>
					<td>
						<div>
							<%= link_to "Edit", edit_author_book_path(id:book.id),class: "btn btn-primary btn-sm", role: "button" %>&nbsp &nbsp
						
							<%= link_to "Show", author_book_path(id:book.id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-sm'} %>&nbsp &nbsp
						
							<%= link_to 'Destroy', author_book_path(id:book.id), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-primary btn-sm", role: "button" %>
						</div>
					</td>
				</tr>
			<%end%>
		</tbody>
	<%else%>
		<p> No books found. </p>
	<%end%>
</table>
<%= link_to 'Back', authors_path, class: "btn btn-primary btn-sm", role: "button"%>
<%= link_to 'Add_book', new_author_book_path, class: "btn btn-primary btn-sm", role: "button"%>	
	
</div>
<div class="modal fade" id="modal-window" tabindex="-1" role="dialog" aria-labelledby="modal-windowTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      
    </div>
  </div>
</div>