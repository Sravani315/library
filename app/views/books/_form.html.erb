<%=form_for @book, url: {action: (params[:action]=='new' || params[:action]=='create') ? 'create' : 'update' }, class: 'form-horizantal' do |form|%>
	<%= render 'books/errors' %>
	<div class="form-group">
		<div class="col-md-2">
			<strong><%= form.label :title%></strong>
			<%= form.text_field :title, class: 'form-control'%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-2">
			<strong><%= form.label :description%></strong>
			<%= form.text_area :description, class: 'form-control', style: 'width: 100%'%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-2">
			<%= form.submit 'Submit', class: 'btn btn-primary btn-sm', role: "button"%>
		</div>
	</div>
<%end%>