<h2 style="margin-top: 30px;margin-bottom: 20px">List of books</h2>
<table class="table table-hover table-bordered table-striped " >
	<%if @books.present? %>
		 <thead class="thead-dark">	
			<tr>
				<th scope="col" >Book Name</th>
			</tr>
		</thead>
		<tbody>
			<%@books.each do |book|%>
				<tr>
					<td>
						<%= book.title%>
					</td>
				</tr>
			<%end%>
		</tbody>
	<%else%>
		<p> No books found. </p>
	<%end%>
</table>



