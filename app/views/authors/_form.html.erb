<%=form_for @author do |form|%>
	<% if @author.errors.any? %>
	    <div id="error_explanation" class="alert alert-primary" role="alert" style="width: 40rem">
	      <h5>
	        Errors
	      </h5>
	      <ul>
	        <% @author.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	 <% end %>
	<div class="form-group ">	
		<div class="col-md-2">
			<b><%= form.label :name%></b>
			<%= form.text_field :name, class: "form-control"%><br>
		</div>
	</div >
	<div class="form-group">
		<div class="col-md-2">
	    	<%= form.submit 'Submit', class: "btn btn-primary btn-sm", role:"button"%>
  		</div>
  	</div>
<%end%>