<%=form_for @author do |form|%>
  <div class="modal-header">
    <h5 class="modal-title" id="AuthorModalLabel">New message</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
		<div class="form-group ">	
				<b><%= form.label :name, class: "col-form-label"%></b>
				<%= form.text_field :name, class: "form-control"%><br>
		</div >
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= form.submit 'Submit', class: "btn btn-primary btn-sm", role:"button"%>
  </div>
<%end%>