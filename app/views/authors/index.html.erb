<table>
	<tr>
		<td>
			<h2>Authors list</h2>
		</td>
		<td>
			<%= link_to 'Add new author', new_author_path %>
		</td> 
	</tr> 
	
	<tr>
		<th>Author Name</th>
		<th>Number of books</th>
		<th colspan="3"></th>
	</tr>
	<%if @authors.present?%>
		<%@authors.each do |author|%>
			<tr>
				<td>
					<%= author.name%>
				</td>
				<td>
					0
				</td>
				<td>
					<%= link_to "edit", edit_author_path(author) %>&nbsp
				</td>
				<td>
					<%= link_to "show", author_path(author) %>&nbsp
				</td>
				<td>
					<%= link_to "add book", new_author_book_path(author) %>&nbsp
				</td>
				<td>
					<%= link_to "books_list", author_books_path(author) %>&nbsp
				</td>
				<td>
					<%= link_to "destroy", author_path(author), method: :delete, data: { confirm: 'Are you sure?' }%>&nbsp
				</td>
			</tr>
		<%end%>
	<%else%>
		<p> There is no authors to display. </p>
	<%end%>

</table>