    <%if flash[:notice].present? %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong> <%= flash[:notice] %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <%end%>
    <div class="row col-md-20">
    	<h3 style="margin-top: 30px; margin-bottom: 20px">List of Authors</h3>
		<table class="table table-hover table-bordered table-striped ">
			<%if @authors.present?%>
			<thead class="thead-dark">
				<tr>
					<th scope="col">Author Name</th>	
					<th scope="col">Number of books</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				<%@authors.each do |author|%>
					<tr>
						<td>
							<%= author.name%>
						</td>
						<td>
							<%=author.books.size%>
						</td>
						<td>
							<%= link_to "Edit", edit_author_path(author),class: "btn btn-primary btn-sm", role: "button", remote: true%>&nbsp
							<%= link_to "Show", author_path(author), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-sm'} %>&nbsp
							<%= link_to "Add Book", new_author_book_path(author),class: "btn btn-primary btn-sm", role: "button" %>&nbsp
							<%= link_to "Books List", author_books_path(author),class: "btn btn-primary btn-sm", role: "button" %>&nbsp
							<%= link_to "Destroy", author_path(author), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm", role: "button"	%>&nbsp
						</td>
					</tr>
				<%end%>
			<%else%>
				<tr><td> There is no authors to display.</td></tr>
			<%end%>
			</tbody>

		</table>
		<%= link_to 'New Author', new_author_path, class: "btn btn-primary btn-sm", role: "button", remote: true %>
	</div>
</div>


</div>
